{
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true
  },

  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  },

  "FSharp.codeLenses.references.enabled": false,
  "FSharp.codeLenses.signature.enabled": false,
  "FSharp.lineLens.enabled": "replaceCodeLens",
  "FSharp.pipelineHints.enabled": true,
  "FSharp.smartIndent": true,
  "FSharp.resolveNamespaces": true,
  "FSharp.unusedDeclarationsAnalyzer": true,
  "FSharp.unusedOpensAnalyzer": true,
  "FSharp.enableAdaptiveLspServer": true,
  "FSharp.enableAnalyzers": true,

  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "[fsharp]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "Ionide.Ionide-fsharp"
  }
}
